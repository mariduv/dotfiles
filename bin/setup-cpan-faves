#!/bin/bash
set -euo pipefail

dists=(
  App::cpanminus
  App::cpm

  Perl::Tidy
  Pod::Cpandoc

  experimentals

  Reply
  Data::Printer
  Data::Printer::Filter::JSON
  Data::Printer::Filter::URI
  Carp::Always
  B::Keywords
  Term::ReadLine::Gnu
  Class::Refresh
  Pry

  Path::Tiny
  Getopt::Long::Descriptive
)

cpm install -g "${dists[@]}"

asdf reshim perl || :
