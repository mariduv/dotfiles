#!/bin/bash
set -eu -o pipefail

dists=(
  Perl::Tidy
  Pod::Cpandoc

  experimentals

  Reply
  Data::Printer
  Data::Printer::Filter::JSON
  Data::Printer::Filter::URI
  Carp::Always
  B::Keywords
  Term::ReadLine::Gnu
  Class::Refresh
  Pry

  Path::Tiny
  Getopt::Long::Descriptive
)

command -v cpm &>/dev/null ||
  cpanm App::cpm

exec cpm install -g "${dists[@]}"
