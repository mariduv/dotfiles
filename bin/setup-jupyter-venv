#!/bin/bash
set -euo pipefail

. ~/.lib/sh/venv_wrapper.sh

[ -d ~/.venvs/jupyter ] || mkvenv jupyter
venv jupyter

pip install -U pynvim jupyter_client ipykernel

nvim --headless -c 'MasonInstall basedpyright' -c qall

