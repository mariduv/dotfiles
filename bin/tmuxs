#!/bin/sh
set -eu

case ${1:-} in *help|-h)
  exec perldoc -T $0;;
esac

name=${1:-$(basename `pwd`)}

if ! tmux has-session -t "$name" 2>/dev/null; then
  tmux new -d -s "$name"
fi

if [ -n "${TMUX:-}" ]; then
  exec tmux switch-client -t "$name"
else
  exec tmux attach -t "$name"
fi

:<<=cut
=head1 NAME

tmuxs - tmux session

=head1 SYNOPSIS

 tmuxs foobaz

 cd ~/proj/quux
 tmuxs
 # aka: tmuxs quux

=head1 DESCRIPTION

tmuxs attaches or switches to a session of the given name, or the cwd's name,
creating it if necessary.

=cut
