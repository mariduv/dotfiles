#!/bin/bash

VIRT='no'

if [ "$(uname -s)" = "OpenBSD" ]; then
  PATH="/usr/X11R6/bin:$PATH"
fi

hsetroot -solid "#002244" &>/dev/null || \
  xsetroot -def -solid "#002244"

xcompmgr -n &>/dev/null </dev/null &

xmodmap ~/.xmodmaprc

if [ -r ~/.Xdefaults.local ]; then
  xrdb -quiet -merge -DUSE_LOCAL ~/.Xdefaults
fi

urxvtd -q -o -f

make -s -C ~/.i3

if [ -r ~/.xsessionrc.local ]; then
  . ~/.xsessionrc.local
fi

if [ "$VIRT" = "yes" ]; then
  xset b off -dpms s off
else
  xset b off
  xautolock -detectsleep &
  pulseaudio --daemonize
  nm-applet &>/dev/null </dev/null &
fi

